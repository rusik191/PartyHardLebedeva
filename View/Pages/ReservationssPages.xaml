<Page x:Class="ReservationssPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartyHardLebedeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReservationssPages">
    <Grid>
        <Grid>
          
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="70"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <DatePicker  Grid.Row="9" Grid.Column="1"/>
                <ComboBox Grid.Row="3" Grid.Column="1"/>
                <TextBox   Grid.Row="5" Grid.Column="1"/>
                <TextBox Grid.Row="7" Grid.Column="1"/>
                <TextBlock Text="Бронирование" Grid.Column="1" Grid.Row="1"/>
                <Button Name="EnterBtn"  Content="Забронировать" Grid.Row="11" Grid.Column="1"/>
            </Grid>
            
        </Grid>
    </Grid>
</Page>
