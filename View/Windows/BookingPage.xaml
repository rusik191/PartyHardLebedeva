<Page x:Class="BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PartyHardLebedeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="500"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Комната" Grid.Column="0"/>
            <ComboBox Name="RoomCmb" Grid.Column="2"/>
            <TextBlock Text="Дата" Grid.Column="0" Grid.Row="2"/>
            <DatePicker Grid.Row="2" Grid.Column="2"/>
            <ComboBox Name="TimeCmb" Grid.Column="2" Grid.Row="4"/>
            <TextBlock Text="Выбор времени" Grid.Column="0" Grid.Row="4"/>
            <TextBlock Text="ФИО" Grid.Column="0" Grid.Row="6"/>
            <TextBox Grid.Row="6" Grid.Column="2"/>
            <TextBlock Text="Номер телефона" Grid.Column="0" Grid.Row="8"/>
            <TextBox Grid.Column="2" Grid.Row="8"/>
            <Button Name="BookingCmb" Content="забронировать" Grid.Row="10" Grid.Column="2"/>




        </Grid>

    </Grid>
</Page>
