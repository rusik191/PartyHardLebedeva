<Window x:Class="RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartyHardLebedeva"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="760" Width="1600" Background="#70398c">
    <Grid>
     
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="158.4"/>
            <ColumnDefinition Width="741.6"/>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="150" />
            <RowDefinition Height="5"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="auto"/>


            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Регистрация" Grid.Column="1" Grid.Row="3" FontSize="25" Grid.ColumnSpan="2" Margin="0,0,0,49" Grid.RowSpan="2"/>
        <TextBox Text="ФИО" Grid.Column="1" Grid.Row="5" FontSize="25" Grid.ColumnSpan="2" Margin="0,0,0,49" Grid.RowSpan="2" Name="FullnameTb"/>
        <TextBox Text="Введите номер телефона" Grid.Column="1" Grid.Row="7" FontSize="25" Grid.ColumnSpan="2" Margin="0,0,0,49" Grid.RowSpan="2" Name="NamberphoneTb"/>
        <Button Name="EnterBtn"  Content="Зарегистрироваться" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,0.5" FontFamily="200" FontSize="30" Click="EnterBtn_Click"/>
        <TextBox Text="Пароль" Grid.Column="1" Grid.Row="7" FontSize="25" Grid.ColumnSpan="2" Margin="0,0,0,49" Grid.RowSpan="2" Name="PasswordTb"/>
        <Image Source="/Resourse/logo.png" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,0,0.4" />
        <CheckBox Content="Запомнить пароль" Grid.Row="11" Grid.ColumnSpan="2" Margin="194.4,9.6,-353.4,15.4" Grid.Column="2" FontSize="20"/>

    </Grid>
</Window>
