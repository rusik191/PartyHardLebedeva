<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartyHardLebedeva"
        mc:Ignorable="d"
        Title="Авторизация" MinHeight="760" MinWidth="1600"
Height="1080" Width="1920"
WindowStartupLocation="CenterScreen"  >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Background="#70398c">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Resourse/logo.png" />
            <Button Content="Главная" Name="MainBtn" Grid.Row="1" Width="250" Height="50"/>
            <Button Content="Брони" Name="ListBtn" Grid.Row="2" Width="250" Height="50"/>
            <Button Content="Забронировать" Name="ReservationsBtn" Grid.Row="3" Width="250" Height="50"/>
            <TextBlock Grid.Row="5"  HorizontalAlignment="Center" VerticalAlignment="Center"> 
                <Hyperlink  Name="ExitBtn" Click="ExitBtn_Click" Foreground="Black">
                    Выйти
                </Hyperlink>
            </TextBlock>
        </Grid>
        
    </Grid>
</Window>